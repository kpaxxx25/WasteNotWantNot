@{
}

<h1>Delete Ingredient</h1>

<form method="post">
    @foreach (var ing in ViewBag.ingredients)
    {
        <div class="form-group">
            <label>
                <span>@ing.Name</span>
                <input type="checkbox" name="eventIds" value="@ing.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Ingredients" class="btn btn-danger">

</form>