@model List<WNWN.Models.Ingredients>
@{
}

<h1>Delete Ingredient</h1>
<style>
    body {
        background-color: teal;
    }

    h1 {
        color: black;
    }

    p {
        color: black;
    }
</style>
<form method="post">
    @foreach (var ing in ViewBag.ingredients)
    {
        <div class="form-group">
            <label>
                <span>@ing.Name</span>
                <input type="checkbox" name="nameIds" value="@ing.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Ingredients" class="btn btn-danger">

</form>