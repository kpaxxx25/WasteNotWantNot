<body>
    <h1>Add Ingredient</h1>

    <form asp-controller="Ingredients" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name">Ingredient</label>
            <input asp-for="Name" asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <select asp-for="FoodGroupId" asp-items="Model.Groups"></select>
        </div>
        <div class="form-group">
            <input asp-for="Weight" />
        </div>
        <div class="form-group">
            <select asp-for="UnitId" asp-items=Model.Units></select>
        </div>
        <div class="form-group">
            <input asp-for="ExpirationDate" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        </div>
        <input type="submit" value="Add Ingredient" />

    </form>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
