@model List<WNWN.Models.Ingredients>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: thick solid #ddd;
        }

        th, td {
            text-align: left;
            padding: 16px;
        }

        tr:nth-child(even) {
            background-color: rgb(222,234,237);
        }

        tr:nth-child(odd) {
            background-color: rgb(222,234,237);
        }

        body {
            background-color: rgb(161,187,195);
        }

        h1 {
            color: black;
        }

        p {
            color: black;
        }
        table {
            color: rgb(222,234,237);
        }
    </style>
</head>
<body>

    <h1>Ingredient List</h1>

    <p>
        <a asp-controller="Ingredients" asp-action="Add">Add Ingredient</a>
    </p>


    <p>
        <a asp-controller="Ingredients" asp-action="Delete">Delete Ingredient</a>
    </p>

    @if (Model.Count == 0)
    {
        <p>Your digital pantry is empty.</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Food Group
                </th>
                <th>
                    Weight
                </th>
                <th>
                    Units
                </th>
                <th>
                    Expiration Date
                </th>
            </tr>
            @foreach (var ing in Model)
            {
                <tr>
                    <td>@ing.Name</td>
                    <td>@ing.Groups.Name</td>
                    <td>@ing.Weight</td>
                    <td>@ing.Units.Name</td>
                    <td>@ing.ExpirationDate</td>
                </tr>
            }
        </table>
    }
</body>
</html>